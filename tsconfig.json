{
  "compilerOptions": {
    "noEmit": true, // Optional - see note below
    "target": "esnext",
    "module": "nodenext",
    "rewriteRelativeImportExtensions": true,
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.*", 
    "scripts/**/*.*",
    "index.ts",
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}